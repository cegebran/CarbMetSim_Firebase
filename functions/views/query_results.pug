extends layout

block content
  h1 Query Results

  style.
    table {
    width:100%}

    table, th, td {
    border: 2px solid black;}

    th, td {
        padding: 15px;
        text-align: center;}

    tr:nth-child(even) {background-color: #f2f2f2;}

  table
    thead
        tr
            th Activity
            th Activity Type
            th Value
            th Date
            th Time Of Day
    tbody
        each activity in activitiesArray
            tr 
                td
                    basefont #{activity.maintype}
                td
                    basefont #{activity.type}
                td
                    basefont #{activity.value}
                td
                    basefont #{activity.date}
                td
                    basefont #{activity.timeofday}