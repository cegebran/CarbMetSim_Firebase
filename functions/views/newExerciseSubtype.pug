extends layout

block content
  h1 New Exercise Subtype

  form(method='POST' action='')
    div.form-group
      label(for='exercise_activity') Exercise Activity:
      input#value.form-control(type='text', placeholder='', name='exercise_activity', required='true', value=(''))
    div.form-group
      label(for='intensity') Intensity:
      input#value.form-control(type='number', min='0', placeholder='', name='intensity', required='true' value=(''), onkeypress='return isNumberKey(event)')
    button.btn.btn-primary(type='submit') Submit

    script.
      function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode < 48 || charCode > 57)){
          return false;
        }else{
          return true;
        }
      }

  if errors
    ul
      for error in errors
        li!= error.msg