extends layout

block content
    h1 Create New Simulation

    style.
        table {
        width:100%}

        table, th, td {
        border: 2px solid black;}

        th, td {
            padding: 15px;
            text-align: center;}

        tr:nth-child(even) {background-color: #f2f2f2;}

    table
        thead
            tr
                th Tick
                th BGL

        tbody
            each tick in tickDataArray
                tr 
                    td
                        basefont #{tick.Tick}
                    td
                        basefont #{tick.BGL}